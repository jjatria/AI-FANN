#!/usr/bin/env perl6

use lib 'lib';
use NativeCall;

class FANN is repr('CPointer') { }

sub fann_create_standard(uint8 $num_layers ) returns FANN is native('fann') {*}
sub fann_create_standard_array(uint8 $num_layers, CArray[int32] $layers is rw ) returns FANN is native('fann') {*}
sub fann_print_parameters(FANN) is native('fann') {*}

my CArray[uint32] $layers = CArray[uint32].new(2, 3, 1 );
my FANN $s = fann_create_standard_array(3, $layers);

fann_print_parameters($s);
